{
  "name": "server",
  "version": "1.0.0",
  "description": "web server for http-schemas-webserver-example",
  "type": "module",
  "scripts": {
    "test": "mocha",
    "watch": "npx mocha -w",
    "build": "npx tsc -p .",
    "serve": "npx tsc -w -p . & npx nodemon ./build/index.js"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "mocha": {
    "extension": [
      "test.ts"
    ],
    "watch-files": [
      "src/**/*.ts"
    ],
    "require": "ts-node/register"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.12",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "chai": "^4.3.4",
    "eslint": "^7.27.0",
    "lint-staged": "^11.0.0",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "morgan": "^1.10.0"
  }
}
